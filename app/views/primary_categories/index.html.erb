<h1>Categories</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Display name</th>
    <th>Status</th>
    <th>Options</th>
  </tr>

<% @primary_categories.each do |primary_category| %>
  <tr>
    <td><%= primary_category.name %></td>
    <td><%= primary_category.display_name %></td>
    <td><%= primary_category.status %></td>
    <td><%= link_to 'Show', primary_category %> | <%= link_to 'Edit', edit_primary_category_path(primary_category) %> | <%= link_to 'Destroy', primary_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Primary category', new_primary_category_path %>
