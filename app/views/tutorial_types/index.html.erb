<h1>Tutorial Types</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Options</th>
  </tr>

<% @tutorial_types.each do |tutorial_type| %>
  <tr>
    <td><%= tutorial_type.name %></td>
    <td><%= tutorial_type.status %></td>
    <td><%= link_to 'Show', tutorial_type %> | <%= link_to 'Edit', edit_tutorial_type_path(tutorial_type) %> | <%= link_to 'Destroy', tutorial_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tutorial type', new_tutorial_type_path %>
