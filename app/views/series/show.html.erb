  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <b>Short Description</b><br/>
    <%= @series.short_description %>
  </div>
</div> 

<div class="row">
  <div class="col-md-12">
    <b>Tag</b><br/>
    <%= @series.tag %>
  </div>
</div>  
