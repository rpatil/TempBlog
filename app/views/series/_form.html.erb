<%= form_for(@series) do |f| %>
  <% if @series.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@series.errors.count, "error") %> prohibited this series from being saved:</h2>

      <ul>
      <% @series.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-8">
    <b>Series Name</b><br/>
    <%= f.text_field :name, :class => "col-md-12"  %>
  </div>
  <div class="col-md-4">
    <b>Status</b><br />
    <%= f.check_box :status %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <b>Short Description</b><br/>
    <%= f.text_area :short_description, :cols => 40, :rows => 5, :class => "col-md-12"  %>
  </div>
</div>  

<div class="row">
  <div class="col-md-12">
    <b>Tag</b><br/>
    <%= f.text_field :tag, :class => "col-md-12"  %>
  </div>
</div>  

<div class="row">
  <div class="col-md-4">
    <b>Vote Up</b><br/>
    <%= f.number_field :vote_up %>
  </div>
  <div class="col-md-4">
    <b>Total View</b><br/>
    <%= f.number_field :total_view %>
  </div>
  <div class="col-md-4">
    <% f.submit %><br/>
    <% if controller.action_name == "edit"%>
      <input type="submit" value="Update" name="commit" class="btn btn-primary btn-sm">
    <% else %>
      <input type="submit" value="Create" name="commit" class="btn btn-primary btn-sm">
    <% end %>
  </div>
</div>

<% end %>




